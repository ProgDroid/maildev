#!/usr/bin/env node

const path = require('path')
const fs = require('fs')

const index = path.join(path.dirname(fs.realpathSync(__filename)), '../index.js')
const MailDev = require(index)

const maildev = new MailDev()
maildev.listen()

const PushBullet = require('pushbullet')
const pusher = new PushBullet(process.env.ACCESS_TOKEN)

maildev.on('new', (email) => {
  pusher.note(process.env.DEVICE_ID, email.from.address + ": " + email.subject, email.text, function(error, response) {})
})
